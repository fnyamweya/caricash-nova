{
  "name": "caricash-nova",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd packages/api && npx wrangler dev",
    "dev:web": "cd packages/web && npx vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "cd packages/api && npx wrangler d1 migrations apply caricash-db --local",
    "build": "npm run build --workspaces --if-present",
    "typecheck": "tsc --build"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vitest": "^3.1.4"
  }
}
