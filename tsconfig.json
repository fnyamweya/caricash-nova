{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true
  },
  "files": [],
  "references": [
    { "path": "packages/api" },
    { "path": "packages/db" },
    { "path": "packages/jobs" },
    { "path": "packages/posting-do" },
    { "path": "packages/shared" },
    { "path": "packages/tests" },
    { "path": "packages/web" }
  ],
  "exclude": ["node_modules", "dist"]
}
